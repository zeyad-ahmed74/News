<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.News" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
      <item name="android:statusBarColor">@color/black</item>

        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

    </style>

    <style name="Theme.News" parent="Base.Theme.News" />


    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#BBA3C1E6</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.News</item>
    </style>


    <style name="CornerCut" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/_10sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_10sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_10sdp</item>
        <item name="cornerSizeTopRight">@dimen/_10sdp</item>
    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <item name="boxStrokeColor">#0D000000</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_16sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_16sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_16sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_16sdp</item>
        <item name="boxBackgroundColor">@color/white</item>


    </style>

</resources>